{{log dbBlogData}}
{{#each blogs}}
<!-- Blog entry -->
<div class="w3-container w3-white w3-margin w3-padding-large">
    <div class="w3-center">
        <h3><strong>{{this.title}}</strong></h3>
        <h5>Post by {{this.user_id}} </h5>
        <span class="w3-opacity">May 2, 2016</span>
    </div>

    <div class="w3-justify">
        <img src="http://placehold.jp/a5d9bc/ffffff/400x160.png?text=ARTICLE" alt="PLACEHOLDER IMG" style="width:100%"
            class="w3-padding-16">
        <p> {{this.post_content}}</p>
        <!-- LIKE BTN -->
        <p class="w3-left"><button class="w3-button w3-white w3-border" onclick="likeFunction(this)"><b><i
                        class="fa fa-thumbs-up"></i> Like</b></button></p>
        <!-- Comment Card -->
        <h2>Comments:</h2>

        {{>blog-comments comment=this.comment}}
    </div>
    <!-- END BLOG ENTRIES -->
</div>
{{/each}}